{
  "name": "revery",
  "version": "0.1.0",
  "esy": {
    "build": [ "dune build --root . -j4" ],
    "buildsInSource": "_build",
    "install": [
      "esy-installer Revery.install", "esy-installer Revery_Core.install",
      "esy-installer Revery_Geometry.install",
      "esy-installer Revery_Shaders.install",
      "esy-installer Revery_UI.install"
    ]
  },
  "scripts": {
    "build": "esy b",
    "build:js": "esy b dune build examples/Bin.bc.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "rtop": "dune utop src -- -implicit-bindings"
  },
  "dependencies": {
    "@esy-ocaml/reason": "^3.3.7",
    "@esy-ocaml/rtop": "^3.3.0",
    "@opam/dune": "^1.5.0",
    "@opam/js_of_ocaml": "*",
    "@opam/js_of_ocaml-compiler": "*",
    "@opam/js_of_ocaml-lwt": "*",
    "@opam/lwt": "^4.0.0",
    "@opam/lwt_ppx": "^1.1.0",
    "flex": "^1.2.2",
    "reason-fontkit": "^1.0.0",
    "reason-gl-matrix": "^0.2.0",
    "reason-glfw": "^1.0.0",
    "reason-reactify": "^1.0.1"
  },
  "peerDependencies": { "ocaml": "~4.6.6" },
  "devDependencies": { "ocaml": "~4.6.6", "@opam/merlin": "*" }
}
